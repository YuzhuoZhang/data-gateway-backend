<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gateway.dao.TaskDao">

    <resultMap type="com.gateway.entity.Task" id="TaskMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="schemeId" column="scheme_id" jdbcType="INTEGER"/>
        <result property="startAt" column="start_at" jdbcType="TIMESTAMP"/>
        <result property="endAt" column="end_at" jdbcType="VARCHAR"/>
        <result property="interval" column="interval" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TaskMap">
        select
          id, scheme_id, start_at, end_at, `interval`
        from data_gateway.task
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TaskMap">
        select
          id, scheme_id, start_at, end_at, `interval`
        from data_gateway.task
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TaskMap">
        select
          id, scheme_id, start_at, end_at, `interval`
        from data_gateway.task
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="schemeId != null">
                and scheme_id = #{schemeId}
            </if>
            <if test="startAt != null">
                and start_at = #{startAt}
            </if>
            <if test="endAt != null and endAt != ''">
                and end_at = #{endAt}
            </if>
            <if test="interval != null">
                and `interval` = #{interval}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into data_gateway.task(scheme_id, start_at, end_at, `interval`)
        values (#{schemeId}, #{startAt}, #{endAt}, #{interval})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update data_gateway.task
        <set>
            <if test="schemeId != null">
                scheme_id = #{schemeId},
            </if>
            <if test="startAt != null">
                start_at = #{startAt},
            </if>
            <if test="endAt != null and endAt != ''">
                end_at = #{endAt},
            </if>
            <if test="interval != null">
                `interval` = #{interval},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from data_gateway.task where id = #{id}
    </delete>

</mapper>
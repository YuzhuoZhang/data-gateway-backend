<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gateway.dao.DatasourceDao">

    <resultMap type="com.gateway.entity.Datasource" id="DatasourceMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="ipAddress" column="ip_address" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="port" column="port" jdbcType="VARCHAR"/>
        <result property="ownerId" column="owner_id" jdbcType="INTEGER"/>
        <result property="comment" column="comment" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DatasourceMap">
        select
          id, ip_address, username, password, port, owner_id, comment
        from data_gateway.dg_datasource
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DatasourceMap">
        select
          id, ip_address, username, password, port, owner_id, comment
        from data_gateway.dg_datasource
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DatasourceMap">
        select
          id, ip_address, username, password, port, owner_id, comment
        from data_gateway.dg_datasource
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="ipAddress != null and ipAddress != ''">
                and ip_address = #{ipAddress}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="port != null and port != ''">
                and port = #{port}
            </if>
            <if test="ownerId != null">
                and owner_id = #{ownerId}
            </if>
            <if test="comment != null and comment != ''">
                and comment = #{comment}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into data_gateway.dg_datasource(ip_address, username, password, port, owner_id, comment)
        values (#{ipAddress}, #{username}, #{password}, #{port}, #{ownerId}, #{comment})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update data_gateway.dg_datasource
        <set>
            <if test="ipAddress != null and ipAddress != ''">
                ip_address = #{ipAddress},
            </if>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="port != null and port != ''">
                port = #{port},
            </if>
            <if test="ownerId != null">
                owner_id = #{ownerId},
            </if>
            <if test="comment != null and comment != ''">
                comment = #{comment},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from data_gateway.dg_datasource where id = #{id}
    </delete>

</mapper>